{
  "buildCommand": "mkdir -p client/src/data && cp products.json client/src/data/ && npm run build:client",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "shared/schema.ts"
    }
  }
}
